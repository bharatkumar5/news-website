<%- include('../includes/head.ejs') %>

<body>
  <%- include('../includes/navbar.ejs') %>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <form
            method="post"
            action="/<% if (editing){ %>edit-news<% } else { %>add-news<% } %>"
            role="form"
          >
            <div class="form-group">
              <input
                type="text"
                class="form-control"
                name="title"
                placeholder="Title"
                value="<% if (editing) { %><%= news.title %><% } %>"
              />
              <input
                type="hidden"
                name="id"
                value="<% if (editing) { %><%= news.id %><% } %>"
              />
            </div>
            <div class="form-group">
              <label> Image </label>
              <div class="input-group">
                <span class="input-group-btn">
                  <span class="btn btn-primary btn-file">
                    Browse
                    <input
                      type="text"
                      name="image"
                      multiple
                      value="<% if (editing) { %><%= news.image %><% }%>"
                    />
                  </span>
                </span>

                <input
                  type="text"
                  class="form-control"
                  readonly
                  value="<% if (editing) { %><%= news.image %><% } %>"
                />
              </div>
              <label> Category </label>
              <div class="option-input input-group input form-group">
                <input
                  class="option"
                  list="browsers"
                  name="category"
                  value="<% if (editing) { %><%= news.category %><% } %>"
                />
                <datalist id="browsers">
                  <option value="Sports"></option>
                  <option value="Technology"></option>
                  <option value="Entertainment"></option>
                  <option value="Business"></option>
                  <option value="Politics"></option>
                  <option value="Health"></option>
                  <option value="Other"></option>
                </datalist>
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control bcontent" name="content">
 <% if (editing) { %><%= news.content %><% } %></textarea
              >
            </div>
            <div class="form-group">
              <input
                type="submit"
                name="Submit"
                value="Publish"
                class="btn btn-primary form-control"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <%- include('../includes/footer.ejs') %>
</body>
